<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_below="@+id/logo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mz.maputobustracker.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:id="@+id/menuItens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#31ffffff"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Bem Vindo"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff3d3d"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtNomeUt"
                android:textColor="#277123"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="200px"
                android:layout_height="150px"
                android:onClick="callRota"
                android:id="@+id/btnRota"
                android:textColor="#000000"
                android:background="@mipmap/trip"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/menuItens"
                android:layout_alignStart="@+id/menuItens"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rota"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#0e9704" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" />

            <Button
                android:layout_width="200px"
                android:layout_height="150px"
                android:id="@+id/btnMaps"
                android:onClick="callMaps"
                android:background="@mipmap/maps"
                android:textColor="#000000"
                android:textAlignment="inherit"
                android:layout_alignTop="@+id/btnRota"
                android:layout_toEndOf="@+id/btnRota"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mapa"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#0e9704" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19" />

            <Button
                android:id="@+id/btnAcerca"
                android:onClick="callAcerca"
                android:background="@mipmap/acerca3"
                android:textColor="#000000"
                android:textAlignment="inherit"
                android:layout_alignTop="@+id/btnRota"
                android:layout_toEndOf="@+id/btnRota"
                android:layout_gravity="center_horizontal"
                android:layout_height="120px"
                android:layout_width="150px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Acerca da Aplicação"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#0e9704" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>